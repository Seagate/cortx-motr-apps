#!/usr/bin/env bash
#
# This script clean install given Mero packages.
# It should work on Red Hat and Debian based systems.
#
# Ganesan Umanesan <ganesan.umanesan@seagate.com>
# 21/02/2017

#executables
c0cp='./c0cp'
c0rm='./c0rm'
c0cat='./c0cat'
fgen='./fgen'

#files
upfile='upFile'
dwfile='dwFile'
bundle='Sage_Bunle'

#####
#c0fidtest()
#####
c0fidtest()
{ 
	log="snodet"	#logs
	out="fidout"	#fids
	bsz=${1:-4096}	#bsize (default 4K)
	cnt=${2:-64 }	#count (default 64)
	num=${3:-10}	#tests (default 10)
	
	bsz=$((bsz))	#allow arithmetic
	cnt=$((cnt))	#allow arithmetic
	num=$((num))	#allow arithmetic
	
	log="$log-$$_bsz${bsz}_cnt${cnt}_num${num}.log"
	out="$out-$$_$(date +%Y%m%d-%H:%M:%S).txt"
	bundle="$bundle-$(date +%Y%m%d).tar"
	
	log=$(pwd)/$log	#send to working directory
	out=$(pwd)/$out	#send to working directory

	# log='/dev/null'
	# out='/dev/stdout'
	
	echo $log
	echo $out
	
	upfile=$(pwd)/$upfile	#send to working directory
	dwfile=$(pwd)/$dwfile	#send to working directory
	bundle=$(pwd)/$bundle	#send to working directory

	echo $upfile
	echo $dwfile
	echo $bundle
	
	#move to executable directory
	pushd $(dirname $(dirname $0))

	#check executables	
	if [[ ! -x "$c0cp" ]]; then
    	echo "error! file $c0cp is not executable nor found"
    	return 11
	fi
	if [[ ! -x "$c0cp" ]]; then
    	echo "error! file $c0cp is not executable nor found"
    	return 12
	fi
	if [[ ! -x "$c0cat" ]]; then
    	echo "error! file $c0cat is not executable nor found"
    	return 13
	fi
	if [[ ! -x "$c0rm" ]]; then
    	echo "error! file $c0rm is not executable nor found"
    	return 14
	fi
	if [[ ! -x "$fgen" ]]; then
    	echo "error! file $fgen is not executable nor found"
    	return 15
	fi
	
	echo "block size = $bsz, count = $cnt tests = $num"	
	dd if=/dev/urandom of=$upfile bs=$bsz count=$cnt
	ls -lh $upfile	

	echo $(date)
	echo $(date) >> $out
	for i in $(eval echo "{1..$num}"); do
	
		fid=$($fgen 2>> $log)
		printf "%03d: %s" "$i" "$fid" >> $out
		
		#c0cp
		rm -f m0trace.* # clean up  		
	   	$c0cp $fid $upfile $bsz $cnt 2>> $log
	   	if [[ $? -ne 0 ]]; then
	   		echo
	  		echo "$c0cp $fid $upfile $bsz $cnt 2>> $log"
	  		#remove fid if possible
	  		$c0rm $fid 2>> $log 
	  		#bundle trace
	  		m0trace -Y -i $(ls m0trace.*) -o $(ls m0trace.*).yml
	  		tar -rvf $bundle $(ls m0trace.*.yml)
	  		return 20
		fi
	   	
		#c0cat
		rm -f m0trace.* # clean up  		
		$c0cat $fid $dwfile $bsz $cnt 2>> $log
	   	if [[ $? -ne 0 ]]; then
	   		echo
	  		echo "$c0cat $fid $bsz $cnt > $dwfile 2>> $log"
	  		#remove fid if possible
	  		$c0rm $fid 2>> $log 	  		
	  		return 21
		fi

		#cmp		
		cmp $upfile $dwfile
	   	if [[ $? -ne 0 ]]; then
	   		echo
	  		echo "cmp $upfile $dwfile"
	  		echo "error! compare failed!!"
	  		#bundle trace
	  		m0trace -Y -i $(ls m0trace.*) -o $(ls m0trace.*).yml
	  		tar -rvf $bundle $(ls m0trace.*.yml)
	  		return 22
		fi
	
		#c0rm
		rm -f m0trace.* # clean up  		
		$c0rm $fid 2>> $log 
	   	if [[ $? -ne 0 ]]; then
	   		echo
	  		echo "$c0rm $fid 2>> $log"
	  		#remove fid if possible
	  		$c0rm $fid 2>> $log 	  		
	  		#bundle trace
	  		m0trace -Y -i $(ls m0trace.*) -o $(ls m0trace.*).yml
	  		tar -rvf $bundle $(ls m0trace.*.yml)
	  		return 23
		fi
		  
		printf "\t [ OK ]\n" >> $out
	done

	
	echo $(date) >> $out
	echo $(date)

	#move to working directory
	popd

	#success
	return 0
}

#main
if [[ "$#" -ne 3 ]]; then
    echo "illegal number of parameters"
    echo "$(basename $0) <block size> <count> <number of tests>"
    echo "$(basename $0) 4096 64 10"
    exit
fi

#c0fidtest
c0fidtest $1 $2 $3
if [[ $? -ne 0 ]]; then
	echo "c0fidtest $1 $2 $3"
	echo "failed!!"
	echo "compressing..."
	ls -a m0trace.*
	tar -tvf $bundle
	bzip2 $bundle
	echo "verifying..."
	tar -jtvf "$bundle.bz2"
	ls -lh *.bz2
	rm -f m0trace.*
	echo "done!!"
else
	echo "c0fidtest $1 $2 $3"
	echo "success!!"
fi
exit
